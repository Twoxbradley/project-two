<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="styles/styles.css">
  <title>My Pokedex</title>
</head>

<body>
  {{{ body }}}

  <!-- The Modal -->
  <div id="signUpModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Sign Up</h2>
      </div>
      <div class="modal-body">
        <div class="container">
          <form id="signUp" action="/api/signup" method="POST">


            <label for="email">
              <b>Email:</b>
            </label>
            <input id="signupEmail" type="email" placeholder="Enter Email" name="email" required>

            <label for="password">
              <b>Password:</b>
            </label>
            <input id="signupPsw" type="password" placeholder="Enter Password" name="password" required>

            <button type="submit">Login</button>
          </form>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>

  <!-- The Modal -->
  <div id="signInModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Sign In</h2>
      </div>
      <div class="modal-body">
        <div class="container">
          <form id="signIn">
            <label for="name">
              <b>Name:</b>
            </label>
            <input id="name" type="text" placeholder="Enter your name" name="username">

            <label for="email">
              <b>Email:</b>
            </label>
            <input id="email" type="email" placeholder="Enter Email" name="email" required>

            <label for="password">
              <b>Password:</b>
            </label>
            <input id="password" type="password" placeholder="Enter Password" name="password" required>
            <button type="submit">Login</button>
          </form>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>

  <!-- The Modal -->
  <div id="signOutModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Sign Out</h2>
      </div>
      <div class="modal-body">
        <div class="container">
          <form id="signOut" action="/logout" method="GET">
            <button type="submit">Sign Out</button>
          </form>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>

  <script src="js/index.js"></script>
</body>

</html>